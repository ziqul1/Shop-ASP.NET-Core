@page
@model Projektos.Pages.EditModel
@{
    ViewData["Title"] = "Edycja produktu";
}

<br />
<h2>Edycja produktu</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <input asp-for="product.Id" type="hidden" />
        <div class="form-group">
            <label asp-for="product.Name" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="product.Name" class="form-control">
                <span asp-validation-for="product.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="product.Price" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="product.Price" class="form-control">
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="product.CategoryId" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <select asp-for="product.CategoryId" asp-items="Model.CategorySelect"></select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
