@page
@model Projektos.Pages.Login.UserLoginModel
@{
}

<br />
<h1> Logowanie </h1>
<br />
<div>
    @Model.Message
</div>
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="user.userName" class="control-label"></label>
            <div class="col-sm-6">
                <input asp-for="user.userName" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="user.password" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="user.password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>