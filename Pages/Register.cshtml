@page
@model Projektos.Pages.RegisterModel
@{
    ViewData["Title"] = "Rejestracja uzytkownika";
}

<br />
<h2>Rejestracja uzytkownika</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">

            <label asp-for="newUser.userName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="newUser.userName" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newUser.password" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="newUser.password" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary"> Zarejestruj </button>
            </div>
        </div>
    </form>
</div>