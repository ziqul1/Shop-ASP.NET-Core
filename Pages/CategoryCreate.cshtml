@page
@model Projektos.Pages.CategoryCreateModel
@{
    ViewData["Title"] = "Dodawanie kategorii";
}

<br />
<h2>Dodawanie kategorii</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="NewCategory.ShortName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="NewCategory.ShortName" class="form-control">
                <span asp-validation-for="NewCategory.ShortName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewCategory.LongName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="NewCategory.LongName" class="form-control">
                <span asp-validation-for="NewCategory.LongName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>